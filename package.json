{
  "name": "template",
  "version": "1.0.0",
  "description": "Template for Node.js projects",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --watch ./dist ./dist/infra/server.js",
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "dev": "ts-node-dev src/infra/server.ts",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test --findRelatedTests",
    "test:ci": "npm test -- --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/filipedev040990/template.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/filipedev040990/template/issues"
  },
  "homepage": "https://github.com/filipedev040990/template#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^4.1.4",
    "@types/express": "^4.17.15",
    "@types/jest": "^28.1.6",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^18.6.3",
    "@types/validator": "^13.7.10",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^4.1.3",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "mockdate": "^3.0.5",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "module-alias": "^2.2.2",
    "mongodb": "^4.13.0",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.1",
    "supertest": "^6.3.3",
    "validator": "^13.7.0"
  },
  "engines": {
    "node": "16.x"
  },
  "_moduleAliases": {
    "@": "dist"
  }
